<% internal_evaluation = evaluation_assignment.proposal.internal_evaluations.find { |e| e.decidim_author_id == evaluation_assignment.evaluator_role.decidim_user_id } %>
<% internal_evaluation = Decidim::InternalEvaluation::Admin::InternalEvaluationPresenter.new(internal_evaluation) if internal_evaluation.present? %>
<% evaluator = present(evaluation_assignment.evaluator) %>

<tr>
  <td colspan="2">
    <%= link_to_if(evaluator.profile_path.present?, evaluator.name, evaluator.profile_path, target: :blank, class: "block") %>
    <%= internal_evaluation.update_date if internal_evaluation.present? %>
  </td>

  <td>
    <strong class="label <%= internal_evaluation&.state_css_class || "warning" %>" style="<%= internal_evaluation&.state_css_style %>">
      <%= internal_evaluation&.state_title || "-" %>
    </strong>
  </td>

  <td colspan="6">
    <%= internal_evaluation&.formatted_body || "-" %>
  </td>

  <td class="table-list__actions">
    <% if evaluator == current_user %>
      <%= with_tooltip(t(".edit_evaluation"), class: "top") do %>
        <button class="text-secondary" data-dialog-open="<%= "evaluateModal-#{evaluation_assignment.id}" %>" data-action="evaluate">
          <%= icon "pencil-line" %>
        </button>
      <% end %>

      <%= decidim_modal id: "evaluateModal-#{evaluation_assignment.id}", class: "evaluate-modal" do %>
        <% url = internal_evaluation.present? ? proposal_internal_evaluation_path(proposal, internal_evaluation) : proposal_internal_evaluations_path(proposal) %>

        <%= decidim_form_for(internal_evaluation_form, url:, html: { class: "form form-defaults edit_proposal_internal_evaluation" }) do |f| %>
          <%= render partial: "/decidim/internal_evaluation/admin/internal_evaluations/form", object: f, locals: { modal_id: "evaluateModal-#{evaluation_assignment.id}" } %>
        <% end %>
      <% end %>
    <% end %>

    <% if allowed_to? :unassign_from_evaluator, :proposals, evaluator: evaluation_assignment.evaluator %>
      <%= icon_link_to(
            "delete-bin-line",
            evaluation_assignment_path(proposal_ids: [proposal.id], evaluator_role_ids: [evaluation_assignment.evaluator_role.id]),
            t("remove_assignment", scope: "decidim.proposals.admin.proposals.show"),
            method: :delete,
            data: { confirm: t("remove_assignment_confirmation", scope: "decidim.proposals.admin.proposals.show"), action: "unassign-evaluator" },
            class: "red-icon"
          ) %>
    <% end %>
  </td>
</tr>
